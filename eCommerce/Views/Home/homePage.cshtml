@model List<eCommerce.Models.product>
@{
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

@* Home Slider and overlay start*@
<section class="home pt-5 overflow-hidden" id="home">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@("~/productImages/" +ViewBag.l[0].imgPath)" asp-append-version="true" class="overflow-hidden d-block w-100 img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-danger">@ViewBag.l[0].name</h5>

                </div>
            </div>
            <div class="carousel-item">
                <img src="@("~/productImages/" +ViewBag.l[1].imgPath)" asp-append-version="true" class="overflow-hidden d-block w-100 img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-danger">@ViewBag.l[1].name</h5>

                </div>
            </div>
            <div class="carousel-item">
                <img src="@("~/productImages/" +ViewBag.l[2].imgPath)" asp-append-version="true" class="overflow-hidden d-block w-100 img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-danger">@ViewBag.l[2].name</h5>

                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next text-danger " type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span class="carousel-control-next-icon left-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="offers ">
        <div class="row justify-content-lg-evenly">
            <!-- box offer 1 -->
            <div class="col-sm-6  col-lg-3 mb-lg-0 mb-4">

                <div class="offer-box text-center position-relative">
                    <div class="offer-inner">
                        <div class="offer-image position-relative overflow-hidden">
                            <img src="@("~/productImages/" +ViewBag.k[1].imgPath)" asp-append-version="true" class="img-fluid" alt="">
                            <div class="offer-overlay"></div>
                        </div>
                        <div class="offer-info">
                            <div class="offer-infor-inner">
                                <p class="heading-bigger text-capitalize"> Sale 25%</p>
                                <p class="offer-title-1 font-weight-bold">Don't Miss the offer</p>
                                <a asp-action="ladiesPage" asp-controller="Ladies" class="btn btn-outline-danger text-uppercase mt-4">Shop Now</a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <!-- box offer 2 -->
            <div class="col-sm-6 col-lg-3  mb-lg-0 mb-4 d-flex flex-column justify-content-between">

                <div class="offer-box text-center position-relative mb-4 mb-sm-0 mb-lg-0">
                    <div class="offer-inner">
                        <div class="offer-image position-relative overflow-hidden">
                            <img src="@("~/productImages/" +ViewBag.k[9].imgPath)" asp-append-version="true" class="img-fluid " id="wrist-images" alt="">
                            <div class="offer-overlay"></div>
                        </div>
                        <div class="offer-info">
                            <div class="offer-infor-inner">
                                <p class="heading-bigger text-capitalize"> Sale 25%</p>
                                <p class="offer-title-1 font-weight-bold">Don't Miss the offer</p>
                                <a asp-action="WatchesPage" asp-controller="Watches" class="btn btn-outline-danger text-uppercase mt-4">Shop Now</a>
                            </div>


                        </div>
                    </div>
                </div>

                <div class="offer-box text-center position-relative mb-4 mb-sm-0 mb-lg-0">
                    <div class="offer-inner">
                        <div class="offer-image position-relative overflow-hidden">
                            <img src="@("~/productImages/" +ViewBag.k[6].imgPath)" asp-append-version="true" class="img-fluid" id="wrist-images" alt="">
                            <div class="offer-overlay"></div>
                        </div>
                        <div class="offer-info">
                            <div class="offer-infor-inner">
                                <p class="heading-bigger text-capitalize"> Sale 25%</p>
                                <p class="offer-title-1 font-weight-bold">Don't Miss the offer</p>
                                <a asp-action="Watches" asp-controller="watchesPage" class="btn btn-outline-danger text-uppercase mt-4">Shop Now</a>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
            <!-- box offer 3 -->
            <div class="col-sm-6  col-lg-3 mb-lg-0 mb-4">

                <div class="offer-box text-center position-relative">
                    <div class="offer-inner">
                        <div class="offer-image position-relative overflow-hidden">

                            <img src="@("~/productImages/" +ViewBag.k[3].imgPath)" asp-append-version="true" class="img-fluid " alt="">
                            <div class="offer-overlay"></div>
                        </div>
                        <div class="offer-info">
                            <div class="offer-infor-inner">
                                <p class="heading-bigger text-capitalize"> Sale 50%</p>
                                <p class="offer-title-1 font-weight-bold">Don't Miss the offer</p>
                                <a asp-action="gentsPage" asp-controller="Gents" class="btn btn-outline-danger text-uppercase mt-4">Shop Now</a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>


</section>

@* Home slider and overlay end *@






