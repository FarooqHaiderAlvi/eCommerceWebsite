
@model eCommerce.Models.product; 
@{
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-center h2 mt-5">Limited time Offer</div>
    </div>
</div>


<div class="container-fluid   offers pt-2">
    <div class="row justify-content-lg-evenly">

        <div class="col-sm-6 col-12  pb-3 border shadow   order-2 order-sm-1">
            <div class="row justify-content-center">
                <div class="col-auto  h3">Product Description</div>
            </div>
            <div class="row">
                <div class="col-auto h4">Tag: <span class="text-danger">@ViewBag.s.name</span> </div>
            </div>
            <div class="row">
                <div class="col-auto">
                    Detail:
                </div>
            </div>
            <div class="row">
                <div class="col-6 offset-1 overflow-hidden">
                    @ViewBag.s.description
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <button type="button"
                            class="btn btn-outline-danger text-white bg-danger text-uppercase mt-2">
                        Make Your
                        Choice
                    </button>
                </div>
            </div>
            <div class="row justify-content-evenly">
                <div class=" product-name pt-3">
                    <h3 class="text-capitalize text-center"> @ViewBag.s.name</h3>
                    <p class="mb-0 amount text-danger text-center">$<span id="unit_price"> @ViewBag.s.price</span>  <del>$599</del></p>
                    <div class="py-1 d-flex justify-content-center">
                        <span class="ti-star active"></span>
                        <span class="ti-star active"></span>
                        <span class="ti-star active"></span>
                        <span class="ti-star"></span>
                        <span class="ti-star"></span>

                    </div>
                    <div class="col-12 mt-2 d-flex justify-content-center align-content-center">
                        <div class="text-danger">
                            Quantity <span class="fa fa-minus" id="minus"> </span> <button id="quantity" type="button"
                                                                                           class="btn btn-outline-danger text-uppercase mt-2 ">
                                1
                            </button> <span id="plus" class="fa fa-plus"></span>
                        </div>

                    </div>
                    <div class="col-12 mt-2 d-flex justify-content-center align-content-center">
                        <div>
                            <span class="text-danger">Price</span>  <button id="price" type="button"
        class="btn btn-outline-danger text-uppercase mt-2 ">
    @ViewBag.s.price
</button>
                        </div>

                    </div>


                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <a type="button" class="btn btn-outline-danger text-danger text-uppercase mt-2" asp-controller="Shopping" asp-action="shoppingPage"> Pay Now</a>
                        </div>
                    </div>

                </div>

            </div>

        </div>



        <div class="col-12 col-sm-6 order-1 order-sm-2 shadow col-lg-3 mb-lg-0 mb-4">
            <a href="#">
                <div class="offer-box text-center position-relative">
                    <div class="offer-inner">
                        <div class="offer-image position-relative overflow-hidden">
                            <img src="@("~/productImages/" +ViewBag.s.imgPath)" asp-append-version="true"  style="height: 25rem;" class="img-fluid allsides"
                                 alt="img">
                            <img src="@("~/productImages/" +ViewBag.s.imgPath)" asp-append-version="true" style="width:3rem;height: 3rem; margin-top: 1rem;"
                                 class="img-fluid  allsides" alt="img">
                            <div class="offer-overlay"></div>
                        </div>

                    </div>
                </div>
            </a>
        </div>

    </div>
</div>
